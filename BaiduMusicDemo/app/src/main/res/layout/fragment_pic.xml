<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/play_page_pic"
        android:src="@mipmap/icon_cover_large"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/play_page_down"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/bt_sceneplay_down_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/play_page_collect"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/bt_sceneplay_collect_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/play_page_detail"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/bt_playpage_moreactions_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>