<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgPlayPage"
    android:id="@+id/playpage_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/play_page_return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt_playpage_button_return_press" />

        <TextView
            android:id="@+id/play_page_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/play_page_margin"
            android:layout_toRightOf="@id/play_page_return_btn"
            android:textSize="@dimen/common_text_size" />

        <TextView
            android:id="@+id/play_page_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_page_titel"
            android:layout_marginLeft="@dimen/play_page_margin"
            android:layout_toRightOf="@id/play_page_return_btn"
            android:alpha="0.75"
             />

        <ImageView
            android:id="@+id/play_page_vp_switcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/bt_playpage_button_lyric_press" />

        <Button
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/play_page_vp_switcher" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/play_page_vp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="@dimen/play_page_vp_margin" />

    <SeekBar
        android:id="@+id/play_page_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/play_page_play_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_weight="1"
             />

        <TextView
            android:id="@+id/play_page_play_duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_page_pattern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/bt_widget_mode_cycle_press" />

        <ImageView
            android:id="@+id/play_page_pre_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/bt_playpage_prev_press" />

        <ImageView
            android:id="@+id/play_page_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/bt_playpage_play_press" />

        <ImageView
            android:id="@+id/play_page_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/bt_playpage_next_press" />

        <ImageView
            android:id="@+id/play_page_list_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/bt_playpage_button_more_press" />


    </LinearLayout>


</LinearLayout>