<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_rv_bg"
    android:id="@+id/item_rank_detail_rv"
    android:padding="5dp">

    <ImageView
        android:id="@+id/item_rank_detail_rv_cover_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/default_song_cover"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_rank_detail_rv_cover_iv"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_rank_detail_rv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲"/>
        <TextView
            android:id="@+id/item_rank_detail_rv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/detail_song"/>

</RelativeLayout>