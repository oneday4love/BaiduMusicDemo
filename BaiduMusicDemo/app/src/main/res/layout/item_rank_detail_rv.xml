<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_rv_bg"
    android:id="@+id/item_rank_detail_rv"
    android:padding="5dp">

    <ImageView
        android:id="@+id/item_rank_detail_rv_cover_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/minibar_default_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_rank_detail_rv_cover_iv"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_rank_detail_rv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/item_rank_detail_rv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_rank_detail_rv_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/detail_song"/>

</RelativeLayout>