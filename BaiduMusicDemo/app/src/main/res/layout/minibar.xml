<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/minibar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom">

        <ImageView
            android:id="@+id/minibar_cover_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/minibar_default_img" />

        <TextView
            android:id="@+id/minibar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_toRightOf="@id/minibar_cover_iv"
            />

        <TextView
            android:id="@+id/minibar_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/minibar_title_tv"
            android:alpha="0.7"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_toRightOf="@id/minibar_cover_iv"
            android:text="" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/minibar_show_playinglist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@mipmap/bt_minibar_playinglist_normal" />

        <ImageView
            android:id="@+id/minibar_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@mipmap/bt_minibar_play_normal" />

        <ImageView
            android:id="@+id/minibar_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bt_minibar_next_normal" />
    </LinearLayout>


</LinearLayout>