<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/item_rec_rv">

    <ImageView
        android:id="@+id/item_rec_rv_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/default_playlist_list"/>
    <ImageView
        android:id="@+id/item_rec_rv_lisn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_lebo_listen"
        android:layout_alignBottom="@id/item_rec_rv_cover"/>

    <TextView
        android:id="@+id/item_rec_rv_lisn_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_rec_rv_lisn_iv"
        android:layout_alignBottom="@id/item_rec_rv_lisn_iv"
        android:textColor="#ffffff"
        android:text="人数"/>
    <TextView
        android:id="@+id/item_rec_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_rec_rv_cover"
        android:text="title"/>

</RelativeLayout>